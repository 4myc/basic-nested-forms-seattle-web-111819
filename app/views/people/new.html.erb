<%= form_for @person do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= fields_for :addresses do |addr| %>
    <%= addr.label :street_address_1, "Street Address 1" %>
    <%= addr.text_field :street_address_1 %>
    <br>
    <%= addr.label :street_address_2, "Street Address 2" %>
    <%= addr.text_field :street_address_2 %>
    <br>
    <%= addr.label :city %>
    <%= addr.text_field :city %>
    <br>
    <%= addr.label :state %>
    <%= addr.text_field :state %>
    <br>
    <%= addr.label :zipcode, "Zip Code" %>
    <%= addr.text_field :zipcode %>
    <br>
    <%= addr.label :address_type, "Address Type" %>
    <%= addr.text_field :address_type %>
  <% end %>
    <br>
  
  <%= f.submit %>
<% end %>